{
    "[javascript]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    "[html]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
    },
    "editor.detectIndentation": false,
    "editor.formatOnSave": true,
    // flow
    "javascript.validate.enable": false,
    // jest
    "jest.autoRun": {},
    // prettier
    "prettier.singleQuote": true,
}